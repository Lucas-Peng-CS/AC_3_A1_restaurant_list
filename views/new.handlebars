<form action="/restaurants" method="POST" class="w-50 mx-auto mt-2">

  <div class="form-group">
    <label for="name">中文名稱</label>
    <input type="text" class="form-control" name="name" id="name" placeholder="請輸入餐廳的中文名 ..." required>
  </div>

  <div class="form-group">
    <label for="name_en">英文名稱</label>
    <input type="text" class="form-control" name="name_en" id="name_en" placeholder="請輸入餐廳的英文名 ..." required>
  </div>
  
  <div class="form-group">
    <label for="category">種類</label>
    <input type="text" class="form-control" name="category" id="category" placeholder="請輸入餐廳的種類 ..." required>
  </div>

  <div class="form-group">
    <label for="image">圖片</label>
    <input type="text" class="form-control" name="image" id="image" placeholder="請輸入餐廳的圖片網址 ..." required>
  </div>

  <div class="form-group">
    <label for="location">地址</label>
    <input type="text" class="form-control" name="location" id="location" placeholder="請輸入餐廳的地址 ..." required>
  </div>

  <div class="form-group">
    <label for="phone">電話</label>
    <input type="text" class="form-control" name="phone" id="phone" placeholder="請輸入餐廳的電話 ..." required>
  </div>

  <div class="form-group">
    <label for="google_map">Google_地圖</label>
    <input type="text" class="form-control" name="google_map" id="google_map" placeholder="請輸入餐廳的Google_地圖網址 ..." required>
  </div>

  <div class="form-group">
    <label for="rating">評分</label>
    <input type="text" class="form-control" name="rating" id="rating" placeholder="請輸入餐廳的評分 ..." required>
  </div>

  <div class="form-group">
    <label for="description" rows="3" cols="20">敘述</label>
    <textarea type="text" class="form-control" name="description" id="description" placeholder="請輸入餐廳詳細的說明 ..." required></textarea>
  </div>

  <button id="submit-btn" type="submit" class="btn btn-primary">送出</button>
</form>
